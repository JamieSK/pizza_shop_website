<form class="" action="/pizzas/<%= @pizza.id %>" method="POST">

  <label for="firstName">First Name:</label>
  <input type="text" name="first_name" id="firstName" value="<%= @pizza.first_name%>"/>

  <label for="lastName">Last Name:</label>
  <input type="text" name="last_name" id="lastName" value="<%= @pizza.last_name %>"/>

  <label for="pizza_select">Select a pizza:</label>
  <select name="topping" id="pizza_select">
    <% Pizza.toppings.each do |topping| %>
      <% selected = @pizza.topping == topping ? 'selected' : ''%>
      <%= "<option value='#{topping}' #{selected} >#{topping}</option>" %>
    <% end %>
  </select>

  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" id="quantity" value="<%= @pizza.quantity %>"/>

  <input type="submit" value="Submit">

</form>
